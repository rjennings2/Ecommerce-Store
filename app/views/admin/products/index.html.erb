<h1>Products</h1>
<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary mb-3' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.category.category_name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td>
          <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>